{
  "version": 2,
  "builds": [
    { "src": "vercel_app.py", "use": "@vercel/python" },
    { "src": "manage.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "vercel_app.py" }
  ],
  "env": {
    "DATABASE_URL": "/tmp/db.sqlite3",
    "SECRET_KEY": "your-secret-key",
    "DEBUG": "False",
    "ALLOWED_HOSTS": "your-vercel-domain.vercel.app,.vercel.app,127.0.0.1,localhost"
  },
  "buildCommand": "python manage.py migrate && python manage.py collectstatic --noinput"
}
